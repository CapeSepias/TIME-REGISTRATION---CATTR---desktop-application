{
	"name": "cattr",
	"version": "2.3.0",
	"description": "Desktop client for Cattr",
	"homepage": "https://cattr.app",
	"main": "app.js",
	"scripts": {
		"lint": "npx eslint .",
		"postinstall": "electron-builder install-app-deps",
		"start": "npx electron ./build",
		"dev": "npx cross-env AT_DEVMODE=meow node_modules/.bin/electron ./build",
		"dev-no-scr": "npx cross-env AT_DEVMODE=meow AT_MOCK_SCR=yes node_modules/.bin/electron ./build",
		"dev-win": "npx cross-env AT_DEVMODE=meow node_modules/.bin/electron.cmd ./build",
		"build-watch": "npm run build-development -- --watch",
		"build-development": "npx cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=webpack.config.js",
		"build-production": "npx cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=webpack.config.js",
		"package-linux": "npx electron-builder -l",
		"package-windows": "npx electron-builder -w",
		"package-mac": "npx electron-builder -m",
		"clean-development": "npx cross-env AT_DEVMODE=meow electron ./tools/clean-development.js"
	},
	"build": {
		"appId": "app.cattr.desktop",
		"productName": "Cattr",
		"asar": "true",
		"directories": {
			"buildResources": "resources",
			"output": "target"
		},
		"files": [
			"./node_modules",
			"!build/renderer/app.js.map",
			"!build/app.js.map",
			{
				"from": "build",
				"to": "./",
				"filter": "**/*"
			},
			{
				"from": "build",
				"to": "./",
				"filter": "app.js"
			}
		],
		"mac": {
			"target": "dmg",
			"category": "public.app-category.productivity",
			"gatekeeperAssess": false,
			"extendInfo": {
				"NSUserNotificationAlertStyle": "alert"
			}
		},
		"linux": {
			"icon": "icon.png",
			"synopsis": "Desktop time tracking application",
			"target": "AppImage",
			"category": "Office"
		},
		"win": {
			"target": "portable",
			"publisherName": "amazingcat LLC",
			"icon": "icon.ico"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cattr-app/desktop-application"
	},
	"author": {
		"name": "amazingcat LLC",
		"email": "team@amazingcat.net"
	},
	"license": "SSPL-1.0",
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:vue/recommended",
			"airbnb-base"
		],
		"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
		},
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"plugins": [
			"vue"
		],
		"settings": {
			"import/core-modules": [
				"electron",
				"Vue"
			],
			"import/resolver": {
				"node": {
					"extensions": [
						".js",
						".jsx",
						".vue"
					]
				}
			}
		},
		"rules": {
			"comma-dangle": [
				"off"
			],
			"max-len": [
				"warn",
				{
					"code": 120,
					"ignoreComments": true,
					"ignoreTrailingComments": true,
					"ignoreUrls": true,
					"ignoreStrings": true,
					"ignoreTemplateLiterals": true,
					"ignoreRegExpLiterals": true
				}
			],
			"no-underscore-dangle": [
				"off"
			],
			"import/no-extraneous-dependencies": [
				"warn",
				{
					"devDependencies": true
				}
			],
			"consistent-return": [
				"off"
			],
			"nonblock-statement-body-position": [
				"warn",
				"below"
			],
			"operator-linebreak": [
				"warn",
				"after"
			],
			"no-param-reassign": [
				"off"
			],
			"arrow-parens": [
				"warn",
				"as-needed"
			],
			"arrow-body-style": [
				"warn",
				"as-needed"
			],
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 2,
					"maxEOF": 1
				}
			],
			"max-statements-per-line": [
				"error",
				{
					"max": 2
				}
			],
			"padded-blocks": [
				"error",
				"always"
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"array-bracket-spacing": [
				"error",
				"always"
			],
			"curly": [
				"error",
				"multi-or-nest"
			]
		}
	},
	"eslintIgnore": [
		"node_modules",
		"build",
		"target"
	],
	"dependencies": {
		"@amazingcat/amazing-iohook": "7.1.4",
		"@amazingcat/electron-ipc-router": "1.2.2",
		"@amazingcat/node-cattr": "2.0.2",
		"@sentry/electron": "^1.0.0",
		"chalk": "^3.0.0",
		"electron-hotkey": "0.0.1-alpha.1",
		"electron-unhandled": "^3.0.1",
		"keytar": "^5.0.0",
		"merge-img": "^2.1.3",
		"minimist": "^1.2.0",
		"sequelize": "^5.21.2",
		"sqlite3": "^4.1.1",
		"umzug": "^2.2.0",
		"uuid": "^3.3.3"
	},
	"devDependencies": {
		"@sentry/browser": "^5.10.2",
		"@sentry/integrations": "^5.10.2",
		"babel-loader": "^8.0.6",
		"copy-webpack-plugin": "^5.1.0",
		"cross-env": "^6.0.3",
		"css-loader": "^3.3.0",
		"electron": "^7.1.4",
		"electron-builder": "^22.1.0",
		"element-theme-chalk": "^2.13.0",
		"element-ui": "^2.13.0",
		"eslint": "^6.7.2",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.19.1",
		"eslint-plugin-vue": "^6.0.1",
		"fstream": "^1.0.12",
		"laravel-mix": "^5.0.0",
		"node-abi": "^2.13.0",
		"node-loader": "^0.6.0",
		"resolve-url-loader": "^3.1.1",
		"sass": "^1.23.7",
		"sass-loader": "^8.0.0",
		"sequelize-cli": "^5.5.1",
		"symlink-webpack-plugin": "^0.2.0",
		"vue": "^2.6.10",
		"vue-i18n": "^8.15.1",
		"vue-loader": "^15.7.2",
		"vue-router": "^3.1.3",
		"vue-template-compiler": "^2.6.10",
		"vuex": "^3.1.2",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10",
		"webpack-node-externals": "^1.7.2"
	}
}
